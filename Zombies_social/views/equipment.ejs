<%include _header%>

    <h1>Registro de equipamiento</h1>

    <form action="/equipment" method="post">
        <div class="form-group">
            <input name="description" type="text" class="form-control" placeholder="Descripcion" required autofocus/>
        </div>

        <div class="form-group">
            <input name="defense" type="number" class="form-control" placeholder="Defense" required autofocus/>
        </div>

        <div class="form-group">
            <input name="category" type="text" class="form-control" placeholder="Category" required autofocus/>
        </div>

        <div class="form-group">
            <input name="weight" type="number" class="form-control" placeholder="Weight" required autofocus/>
        </div>
        <input type="submit" value=" Registrarse" class="btn btn-primary btn-block" />
    </form>

    <%include _footer%>